# Nginx Site Configuration Template
# FlowBiz Client: dhamma-channel-automation
#
# Usage:
#   1. Copy to /etc/nginx/sites-available/dhamma-automation.conf
#   2. Replace DOMAIN_NAME with your actual domain
#   3. Replace <FLOWBIZ_ALLOCATED_PORT> with actual port (default: 3007)
#   4. Create symlink: sudo ln -s /etc/nginx/sites-available/dhamma-automation.conf /etc/nginx/sites-enabled/
#   5. Test: sudo nginx -t
#   6. Reload: sudo systemctl reload nginx
#   7. Setup SSL: sudo certbot --nginx -d your-domain.com

# ============================================================
# REPLACE THESE VALUES
# ============================================================
# DOMAIN_NAME → your actual domain (e.g., dhamma.example.com)
# <FLOWBIZ_ALLOCATED_PORT> → port from config/flowbiz_port.env (default: 3007)
# ============================================================

# Upstream definition
upstream dhamma_backend {
    # REPLACE: <FLOWBIZ_ALLOCATED_PORT> with actual port
    server 127.0.0.1:<FLOWBIZ_ALLOCATED_PORT> max_fails=3 fail_timeout=30s;
}

# HTTP server - redirect to HTTPS (after SSL setup)
server {
    listen 80;
    listen [::]:80;
    
    # REPLACE: DOMAIN_NAME with your actual domain
    server_name DOMAIN_NAME;
    
    # Allow Let's Encrypt ACME challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    
    # Redirect all other traffic to HTTPS (uncomment after SSL setup and remove temporary location block below)
    # return 301 https://$server_name$request_uri;
    
    # Temporary: proxy to backend (before SSL setup)
    location / {
        proxy_pass http://dhamma_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

